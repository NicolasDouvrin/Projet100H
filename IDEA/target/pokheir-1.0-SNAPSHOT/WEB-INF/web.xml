<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>accueil</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>AuthentificationFiltre</filter-name>
        <filter-class>devweb.filtres.AuthentificationFiltre</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthentificationFiltre</filter-name>
        <url-pattern>/classement</url-pattern>
        <url-pattern>/compte</url-pattern>
        <url-pattern>/deconnexion</url-pattern>
        <url-pattern>/index2</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>devweb.filtres.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>FileUploadHandler</servlet-name>
        <servlet-class>devweb.services.FileUploadHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadHandler</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>



</web-app>